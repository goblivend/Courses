with "config/ex1_config.gpr";
project Ex1 is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Ex1_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("ex1.adb");

   package Compiler is
      for Default_Switches ("Ada") use Ex1_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Ex1;
